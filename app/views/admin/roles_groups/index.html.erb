<div class="box">
  <div class="box-header">
    <h3>Roles Groups</h3>
  </div>
  <div class="box-body">
    <% @roles_groups.each do |roles_group| %>
      <table class="table table-bordered">
          <tr><td colspan="2">
            <strong><%= roles_group.name.upcase %></strong>
          </td></tr>
          <% roles_group.roles_models.each do |roles_model| %>
            <tr>
              <td style="width: 200px;"><%= roles_model.model_class_name %></td>
              <td><%= BindRolesModelService.new(roles_model.model_class_name.constantize)
                .generate_roles(roles_model.code).join ", " %></td>
            </tr>
          <% end %>
      </table>
      <br>
    <% end %>
  </div>
</div>
    <%= link_to t(".new"), new_admin_roles_group_path, class: "btn btn-primary" %>

