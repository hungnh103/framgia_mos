<nav id="navbar-user" class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse"
        data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     </div>
    <div class="container">
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav" id="category-nav">
          <li><%= link_to t("layouts.home"), root_path %></li>
          <% @category_roots.each do |category| %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <%= category.name %><span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to category.name, category %></li>
                <% category.children.each do |children| %>
                  <li><%= link_to children.name, children %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
          <li data-turbolinks="false">
            <%= link_to t("layouts.confessions"), confessions_path %>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% unless user_signed_in? %>
            <li>
              <%= link_to new_user_registration_path,
                "data-toggle": "modal", "data-target": "#modalSignup" do %>
                <span class="glyphicon glyphicon-user"></span>
                <%= t "layouts.sign_up" %>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path,
                "data-toggle": "modal", "data-target": "#modalLogin" do %>
                <span class="glyphicon glyphicon-log-in"></span>
                <%= t "layouts.log_in" %>
              <% end %>
            </li>
          <% else %>
            <li data-turbolinks="false">
              <%= link_to new_post_path do %>
                <i class="fa fa-pencil" aria-hidden="true"></i>
                <span><%= t ".layouts.create_post" %></span>
              <% end %>
            </li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <% if current_user.avatar.url.blank? %>
                  <%= image_tag "current_user.png", class: "user-image" %>
                <% else %>
                  <%= image_tag current_user.avatar, class: "user-image" %>
                <% end %>
                <span class="hidden-xs"><%= current_user.name %></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t("layouts.profile"), current_user %>
                </li>
                <li>
                  <%= link_to t("layouts.edit_profile"), edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to t("layouts.log_out"), destroy_user_session_path,
                    method: :delete %>
                </li>
              </ul>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>
